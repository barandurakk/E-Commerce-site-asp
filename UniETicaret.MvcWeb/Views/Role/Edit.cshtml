@model UniETicaret.MvcWeb.Models.RoleEditModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    <input type="hidden" name="RoleName" value="@Model.Role.Name" />
    <input type="hidden" name="RoleId" value="@Model.Role.Id" />

    <div class="panel panel-primary">
        <div class="panel-heading">
            @Model.Role.Name Rolüne Ekle
        </div>
        <table class="table ">
            @if (Model.nonMembers.Count() == 0)
            {
                <tr><td colspan="2">Bu role sahip olmayan kullanıcı yok.</td></tr>
            }
            else
            {
                <tr>
                    <th>Kullanıcı Adı</th>
                    <th>Rol Adı</th>
                </tr>
                foreach (var nonmember in Model.nonMembers)
                {
                    <tr>
                        <td>@nonmember.UserName</td>
                        <td><input type="checkbox" name="IdsToAdd" value="@nonmember.Id" /></td>
                    </tr>
                }
            }

        </table>
    </div>


    <div class="panel panel-primary">
        <div class="panel-heading">
            @Model.Role.Name Rolünden Çıkart
        </div>
        <table class="table table-striped">
            @if (Model.Members.Count() == 0)
            {
                <tr><td colspan="2">Bu role eklenmiş bir kullanıcı yok.</td></tr>
            }
            else
            {
                <tr>
                    <th>Kullanıcı Adı</th>
                    <th>Rol Adı</th>
                </tr>
                foreach (var member in Model.Members)
                {
                    <tr>
                        <td>@member.UserName</td>
                        <td><input type="checkbox" name="IdsToDelete" value="@member.Id" /></td>
                    </tr>
                }
            }

        </table>



    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>

}

