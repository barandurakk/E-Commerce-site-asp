@using UniETicaret.MvcWeb.Models;
@model IEnumerable<UrunModel>


@{
    ViewBag.Title = "Liste";
}

<div class="container pb-5">

    <div class="row">

        <div class="col-md-3">
            @Html.Action("GetCategories", "Home")
            @Html.Partial("_AramaBar")
        </div>

        <div class="col-md-9">

            @if (Model.Count() == 0)
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                    Bu kategoride bir ürün bulunamadı.
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fa fa-check-square" aria-hidden="true"></i>
                    <strong>@Model.Count() adet</strong> ürün bulundu.
                </div>
            }

            @Html.Partial("_UrunListesi", Model)

        </div>
    </div>

</div>